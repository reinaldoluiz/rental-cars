<% car_model.errors.full_messages.each do |message|%>
  <p><%= message%></p>
<%end%>

<%= form_with model: @car_model, local: true do |f|%>
  <div>
      <%= f.label :name%>
      <%= f.text_field :name%>
  </div>
  <div>
      <%= f.label :year%>
      <%= f.text_field :year%>
  </div>
  <div>
      <%= f.label :manufacturer%>
      <%= f.text_field :manufacturer%>
  </div>
  <div>
      <%= f.label :motorization%>
      <%= f.text_field :motorization%>
  </div>
  <div>
      <%= f.label :car_category_id %>
      <%= f.collection_select(:car_category_id, @car_categories, :id, :name, prompt: 'Escolha a categoria') %>
  </div>
  <div>
      <%= f.label :fuel_type%>
      <%= f.text_field :fuel_type%>
  </div>
  <%= f.submit 'Enviar'%>
<% end %>
